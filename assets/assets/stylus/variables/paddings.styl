// base
$base = 16px
$baseDivideOneHalf = ($base / 1.5)
$baseHalf = ($base / 2)
$baseOneAndHalf = $base * 1.5
$baseTwo = $base * 2
$baseThree = $base * 3
$baseFour = $base * 4

// paddings
.pb_base
  padding-bottom $base

.pb_baseHalf
  padding-bottom $baseHalf

.pb_baseOneAndHalf
  padding-bottom $baseOneAndHalf

.pb_baseTwo
  padding-bottom $baseTwo

.pt_base
  padding-top $base

.pt_baseHalf
  padding-top $baseHalf

// margins
.mb_base
  margin-bottom $base
